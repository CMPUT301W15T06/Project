<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetLocationByMapActivity" >

    <ImageView
        android:id="@+id/getLocationImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/worldmap" />

    <TextView
        android:id="@+id/staticTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getLocationImageView"
        android:layout_below="@+id/getLocationImageView"
        android:layout_marginTop="16dp"
        android:text="The location initially be set as the recent sent location. You can click on the above map or send GPS location to set location." />

    <TextView
        android:id="@+id/llTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/staticTextView"
        android:layout_below="@+id/staticTextView"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="47dp"
        android:text="Did not recieved GPS location yet" />

</RelativeLayout>