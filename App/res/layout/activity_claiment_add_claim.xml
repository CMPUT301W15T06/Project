<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddClaimAcitivity"
    tools:ignore="HardcodedText,TextFields" >

    <Button
        android:id="@+id/createClaimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="finishAddClaim"
        android:text="Create this new Claim"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/createClaimNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimButton"
        android:text="Claim Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/createClaimBeginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimNameEditText"
        android:layout_below="@+id/createClaimNameEditText"
        android:layout_marginTop="18dp"
        android:text="From"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/createClaimNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimNameTextView"
        android:layout_below="@+id/createClaimNameTextView"
        android:ems="10" />

    <EditText
        android:id="@+id/createClaimBeginEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimBeginTextView"
        android:layout_below="@+id/createClaimBeginTextView"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/createClaimEndTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimBeginEditText"
        android:layout_below="@+id/createClaimBeginEditText"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/createClaimEndEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimEndTextView"
        android:layout_below="@+id/createClaimEndTextView"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/createClaimDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimEndEditText"
        android:layout_below="@+id/createClaimEndEditText"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/createClaimDescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createClaimDescriptionTextView"
        android:layout_below="@+id/createClaimDescriptionTextView"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>
